<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="annotationBasedActionRegistrar" class="nl.runnable.alfresco.actions.AnnotationBasedActionRegistrar" init-method="registerAnnotationBasedActions">
    <property name="dictionaryService">
      <bean class="nl.runnable.alfresco.actions.DummyDictionaryService"/>
    </property>
    <property name="actionExecuterRegistry" ref="actionExecuterRegistry"/>
  </bean>

  <bean id="actionExecuterRegistry" class="nl.runnable.alfresco.actions.DefaultActionExecuterRegistry">

  </bean>

	<bean class="nl.runnable.alfresco.actions.ExampleAction" />
</beans>