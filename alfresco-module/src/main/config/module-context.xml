<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath:/META-INF/spring/module/web-script-integration-context.xml" />

	<import resource="classpath:/META-INF/spring/module/action-integration-context.xml" />

	<bean id="osgi.container.ModuleComponent" class="nl.runnable.alfresco.osgi.OsgiContainerModuleComponent" parent="module.baseComponent"
		destroy-method="destroy">
		<description>Instantiates the child application context and initializes the FrameworkManager within it.</description>
		<property name="moduleId" value="nl.runnable.alfresco.dynamicextensions" />
		<property name="sinceVersion" value="0.0.1" />
		<property name="appliesFromVersion" value="0.0.1" />
		<property name="appliesToVersion" value="1.0.0" />
		<property name="executeOnceOnly" value="false" />
		<property name="applicationContextConfigLocations">
			<list>
				<value>classpath:/alfresco/module/nl.runnable.alfresco.dynamicextensions/osgi-container-context.xml</value>
			</list>
		</property>
		<property name="webScriptsContainer" ref="webscripts.container" />
	</bean>

	<alias name="osgi.container.ModuleComponent" alias="osgi.container.FrameworkService" />

	<bean id="osgi.container.WebApplicationJavaPackages" class="nl.runnable.alfresco.osgi.spring.WebApplicationSystemPackageFactoryBean">
		<description>Scans for Java packages in JARs in /WEB-INF/lib</description>
		<property name="javaPackageScanner" ref="osgi.container.JavaPackageScanner" />
		<property name="libraryVersionDetectors">
			<list>
				<bean class="nl.runnable.alfresco.osgi.spring.AlfrescoLibraryVersionDetector">
					<property name="descriptorService" ref="DescriptorService" />
				</bean>
				<bean class="nl.runnable.alfresco.osgi.spring.SpringLibraryVersionDetector" />
			</list>
		</property>
		<property name="basePackages">
			<bean class="nl.runnable.alfresco.osgi.spring.SystemPackageConfigurationFactoryBean">
				<property name="configurations" value="classpath:/META-INF/spring/osgi-container/packages/web-application-packages.txt" />
				<property name="configurationLocations" value="classpath*:/dynamic-extensions/configuration/packages/web-application-packages.txt" />
			</bean>
		</property>
	</bean>

	<bean id="osgi.container.JavaPackageScanner" class="nl.runnable.alfresco.osgi.JavaPackageScanner" />

</beans>